{
    "hidden": true,
    "type": "origins:multiple",

    "revives": {
        "type": "origins:resource",
        "min": 0,
        "max": 2700,
        "start_value": 0,
        "hud_render": {
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 6,
            "inverted": true
        }
    },

    "reset-revives": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:change_resource",
            "resource": "*:*_revives",
            "change": 0,
            "operation": "set"
        }
    },

    "prevent-death": {
        "type": "origins:prevent_death",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:clear_effect"
                },
                {
                    "type": "origins:heal",
                    "amount": 4
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_revives",
                    "change": 2700,
                    "operation": "set"
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_revives",
            "comparison": "==",
            "compare_to": 0
        }
    },

    "prevent-overstress": {
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "create_automaton:stress_overstress-toggle",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:execute_command",
                    "command": "title @s clear"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "create_automaton:stress_stress-meter",
                    "change": -600
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_revives",
                    "change": 2700,
                    "operation": "set"
                },
                {
                    "type": "origins:feed",
                    "food": -10,
                    "saturation": -20
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "create_automaton:stress_overstress-toggle",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_revives",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },

    "tick-down": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_revives",
            "change": -1
        },
        "interval": 20
    }
}